{% extends "admin/layouts.njk" %}

{% block header %}
    <a href="/admin/recipes">RECEITAS</a>
    <a href="/admin/chefs" class="open">CHEFS</a>
{% endblock %}

{% block content %}
    <main class="admin-main input">

        <form method="POST" action="/admin/chefs" class="recipe-form" enctype="multipart/form-data">

            <div>
                <h1>Criando chef</h1>
                
                <div class="form-buttons">
                    <button type="hidden" class="edit-button">Editar receita</button>
                    <button type="submit">Salvar chef</button>
                </div>
            </div>

            {% include "admin/chefs/fields.njk" %}

        </form>

    </main>

{% endblock %}
